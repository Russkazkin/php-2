<h1>{{ heading }}</h1>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Item</th>
            <th scope="col">Price</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        {% for product in products %}
        <tr class="product-item">
            <td>{{ product.name }}</td>
            <td>{{ product.price }}</td>
            <td>
                <button role="button"
                        data-basket="{{ product.id_basket }}"
                        class="btn btn-danger btn-sm delete">Delete
                </button>
            </td>
        </tr>
        {% endfor %}
        <tr>
            <td>Total:</td>
            <td id="basketTotal">{{ total }}</td>
            <td></td>
        </tr>
    </tbody>
</table>
<div class="order-button" id="order-confirm">
    <a href="/order/create/" class="btn btn-success">Confirm</a>
</div>
