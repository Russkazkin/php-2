<h1>{{ heading }}</h1>
<table class="table table-striped table-dark">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Status</th>
        <th scope="col">Date</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Total</th>
    </tr>
    </thead>
    <tbody>
    <tr class="product-item">
        <td>{{ info.id_order }}</td>
        <td>{{ info.status }}</td>
        <td>{{ info.created }}</td>
        <td>{{ info.name }}</td>
        <td>{{ info.email }}</td>
        <td>{{ total }}</td>
    </tr>
    </tbody>
</table>
<button type="button" class="btn btn-danger" disabled>Payment</button>